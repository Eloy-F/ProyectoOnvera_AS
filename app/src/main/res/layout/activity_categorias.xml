<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_ListaCategoria"
    android:background="#151414">
    <ImageView
        android:id="@+id/logoperfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="18dp"
        android:src="@drawable/logoperfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/sharpe_circle"
        android:clipToOutline="true"/>

    <TextView
        android:id="@+id/txtcat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actiniciar_Categoria"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@color/white"/>

      <Button
        android:id="@+id/btnniños"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:text="@string/actLista_niños"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/txtcat"
        app:layout_constraintStart_toStartOf="parent"
          android:backgroundTint="#F44336"
          android:textColor="#FFFFFF"
          android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"/>

       <Button
        android:id="@+id/btnadultos"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:text="@string/actLista_adulto"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnniños"/>


</androidx.constraintlayout.widget.ConstraintLayout>