<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.MainActivity">

    <ImageView
        android:id="@+id/act_logo_onvera"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/logo_onvera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <EditText
        android:id="@+id/act_inicio_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/black"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/actinicio_user"
        android:maxLength="8"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_logo_onvera" />
    <EditText
        android:id="@+id/actinicio_access_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberPassword"
        android:hint="@string/actinicio_password"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/act_inicio_usuario"/>


    <Button
        android:id="@+id/actincio_access_sesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actiniciar_sesion"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="80dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:onClick="onClicVerificar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actinicio_access_password"/>

    <Button
        android:id="@+id/actincio_access_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actiniciar_registro"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="80dp"
        android:background="@color/Red"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClicVerificar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actincio_access_sesion"/>



</androidx.constraintlayout.widget.ConstraintLayout>